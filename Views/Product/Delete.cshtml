@model web_dev_assignment.Models.Product
@{
    ViewData["Title"] = "Delete";
}

<h2>Are you sure you want to delete this product?</h2>

<div class="card mt-4">
    <div class="card-body">
        <h3 class="card-title">@Model.Name</h3>
        <h6 class="text-muted">Type: @Model.Type</h6>
        <p>@Model.Description</p>

        <ul class="list-unstyled">
            @if (Model.Features != null && Model.Features.Any())
            {
                <li><strong>Features:</strong></li>
                @foreach (var feature in Model.Features)
                {
                    <li>- @feature</li>
                }
            }
        </ul>

        <p><strong>Price:</strong> @Model.Price.ToString("C")</p>
        <p><strong>Support:</strong> @(Model.HasSupport ? "Yes" : "No")</p>
        <p><strong>Customization:</strong> @(Model.HasCustomization ? "Yes" : "No")</p>
        <p><strong>Minimum Hardware Requirements:</strong> @Model.MinimumHardwareRequirements</p>
        <p><strong>Recommended Hardware Requirements:</strong> @Model.RecommendedHardwareRequirements</p>
        <p><strong>Software Requirements:</strong> @Model.SoftwareRequirements</p>
        <p><strong>Purchase Link:</strong> 
            <a href="@Model.PurchaseLink" target="_blank">@Model.PurchaseLink</a>
        </p>
    </div>
    <div class="card-footer d-flex justify-content-between">
        <form asp-action="Delete" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <input type="submit" class="btn btn-danger" value="Delete" />
            <a asp-action="List" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
