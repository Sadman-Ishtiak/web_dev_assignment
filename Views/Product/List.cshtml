@model List<web_dev_assignment.Models.Product>
@{
    ViewData["Title"] = "Products";
}

<h2>Product List</h2>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Type</th>
            <th>Price</th>
            <th>Support</th>
            <th>Customization</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Type</td>
                <td>@product.Price.ToString("C")</td>
                <td>@(product.HasSupport ? "Yes" : "No")</td>
                <td>@(product.HasCustomization ? "Yes" : "No")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-sm btn-secondary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
